{
    "name": "gmapp-e2e",
    "version": "0.0.1",
    "description": "Gherkin based end-to-end automations for react-native iOS and Android",
    "main": "index.js",
    "scripts": {
        "android": "better-npm-run test:func:android",
        "ios": "better-npm-run test:func:ios"
    },
    "betterScripts": {
        "test:func:android": {
            "command": "node ./node_modules/.bin/cucumber-js --tags @android ./features -r ./step_definitions/android/*/js"
        },
        "test:func:ios": {
            "command": "node ./node_modules/.bin/cucumber-js --tags @ios ./features -r ./step_definitions/ios/*.js"
        }
    },
    "author": "Yann Bonnetain <yann.bonnetain@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "appium-doctor": "^1.13.1",
        "better-npm-run": "0.1.1",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "cucumber": "6.0.5",
        "underscore": "^1.9.1",
        "webdriverio": "^5.18.7"
    }
}
